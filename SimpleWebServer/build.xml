<project name = "SimpleWebBrowser" default="cleanbuild" basedir=".">
	<description>
		build file to run code in SimpleWebSever
	</description>
	<property name="src" location="src/"/>
	<property name="build" location="bin/"/>

	<target name="clean" description="deletes all class files">
		<delete dir="${build}"/>
	</target>

	<target name="build" description="compiles all java files to /bin">
		<mkdir dir="${build}"/>
		<javac srcdir="${src}" destdir="${build}"/>
	</target>

	<target name="cleanbuild" depends="clean,build"/>

	<target name="run" description="launches SimpleWebServer on port 8085">
		<java classname="edu.nmsu.cs.webserver.WebServer" classpath="${build}" fork="true">
			<arg value="8085"/>
		</java>
	</target>
</project>

